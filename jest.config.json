{
  "collectCoverage": true,
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleDirectories": ["node_modules", "src"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
